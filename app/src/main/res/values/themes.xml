<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Finance_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/button_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/light_blue</item>
    </style>

    <style name="Theme.Finance_app" parent="Base.Theme.Finance_app" />

    <style name="SquareButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>
